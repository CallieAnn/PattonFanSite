@model PattonFanSite.Models.StoriesResponse
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StoriesForm</title> 
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    
</head>
<body>
   <div class="container">
       <h3>My Story</h3>
       Please share your horse story with us, whether about Patton, Lipizzans, or any type of equine!
       <form asp-action="StoriesForm" method="post">
           <div asp-validation-summary="All"></div>
           <div class="form-group">
               <label asp-for="Name">Your Name:</label>
               <input class="form-control" asp-for="Name" />
           </div>
           <div class="form-group">
               <label asp-for="Title">Story Title</label>
               <input class="form-control" asp-for="Title" />
           </div>
           <div class="form-group">
               <label asp-for="Date">Story Date</label>
               <input class="form-control" asp-for="Date" />
           </div>
           <div class="form-group">
               <textarea class="form-control" asp-for="Story" rows="10" cols="30">
                    </textarea>
           </div>
           <div class="text-center">
               <button type="submit" class="btn btn-default">
                   Submit Story
               </button>
           </div>
       </form>
   </div>
            
        
</body>
</html>

