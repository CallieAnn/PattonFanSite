@model PattonFanSite.Models.Story
@{
    Layout = "_Layout";
    ViewData["Title"] = "Share a Story";
}

    <div class="container">
        <h3>My Story</h3>
        Please share your horse story with us, whether about Patton, Lipizzans, or any type of equine!
        <form asp-action="StoriesForm" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">Your Name:</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Title">Story Title:</label>
                <input class="form-control" asp-for="Title" />
            </div>
            <div class="form-group">
                <label asp-for="Date">Story Date:</label>
                <input class="form-control" asp-for="Date" />
            </div>
            <div class="form-group">
                <label asp-for="StoryText">Story:</label>
                <textarea class="form-control" asp-for="StoryText" rows="10" cols="30">
                    </textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-default">
                    Submit Story
                </button>
            </div>
        </form>
    </div>


