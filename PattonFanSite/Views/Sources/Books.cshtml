@model List<Book>
@{
    Layout = "_SimpleLayout";
    ViewBag.Title = "Books";
    ViewBag.BackPage = "Sources";
    ViewBag.BackController = "Sources";
}

    <div class="container">
        <h1 class="text-center">Books</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Description</th>
                    <th>Publication Date</th>
                    <th>Purchase a Copy</th>
                </tr>
            </thead>
            
            <tbody>
                @foreach (Book b in Model)
                {
                    <tr>
                        <td>@b.Title</td>
                        <td>@b.Author</td>
                        <td>@b.Description</td>
                        <td>@b.PubDate</td>
                        <td><a href="@b.Url">@b.Title</a></td>
                    </tr>
                }
            </tbody>
            
        </table>
        
    </div>
